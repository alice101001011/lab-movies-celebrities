<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Movies</h2>
      {{#each movies}}
        <h3>{{this.title}}</h3>
        <a href="/movies/{{this._id}}" class="btn btn-sm btn-outline-dark">View
          details</a>
      {{/each}}
      <div>
        <a href="/movies/create" class="btn btn-sm btn-outline-dark">Add new
          movie</a>
        <a href="/" class="btn btn-sm btn-outline-dark">Go back</a>
      </div>
    </div>
  </div>
</div>